@page "/Auth"
<PageTitle>Login - BuyIt</PageTitle>

<section class="auth">
    <div class="auth__wrapper">
        <nav class="auth__navigation">
            <span class="auth__option">Login</span>
            <span class="auth__option">Register</span>
        </nav>
        <div class="auth__header">
            <img class="auth__logo" src="@Assets["images/logo.webp"]" alt="BuyIt logo"/>
            <p>Register now and get access to our offers! </p>
        </div>
        <h2><span>Register with</span></h2>
        @* Zmienić na editform ! *@
        <form class="auth__form">
            <div class="auth__pair">
                <label for="name" class="auth__label"></label>
                <input type="text" id="name" autocomplete="on" placeholder="Name"/>
            </div>
            <div class="auth__pair">
                <label for="surname" class="auth__label"></label>
                <input type="text" id="surname" autocomplete="on" placeholder="Surname" />
            </div>
            <div class="auth__pair">
                <label for="email" class="auth__label"></label>
                <input type="email" id="email" autocomplete="on" placeholder="Email" />
            </div>
            <div class="auth__pair">
                <label for="password" class="auth__label"></label>
                <input type="password" id="password" autocomplete="on" placeholder="Password" />
                <i class="auth__icon auth__icon--showPassword"></i>
            </div>
            <div class="auth__pair">
                <label for="confirmedPassword" class="auth__label"></label>
                <input type="password" id="confirmedPassword" autocomplete="on" placeholder="Confirmed password" />
                <i class="auth__icon auth__icon--showPassword"></i>
            </div>
            <input class="auth__submit" type="submit" value="Login" />
        </form>
        <h2><span>or</span></h2>
        <div class="auth__options">
            <a class="auth__link auth__link--google" href="#">
                <img src="/icons/auth/google.svg" class="auth__icon" alt="Google icon" />
                <span>Google</span>
            </a>
            <a class="auth__link auth__link--facebook" href="#">
                <img src="/icons/auth/facebook.svg" class="auth__icon" alt="Facebook icon" />
                <span>Facebook</span>
            </a>
        </div>
    </div>
</section>